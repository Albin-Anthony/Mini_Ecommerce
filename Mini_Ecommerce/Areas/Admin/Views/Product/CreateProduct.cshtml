<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Product List</title>
    <!-- Include jQuery -->
    <script src="https://code.jquery.com/jquery-3.5.1.min.js"></script>
    <!-- Include ApexCharts library -->
    <script src="https://cdn.jsdelivr.net/npm/apexcharts"></script>
</head>
<body>
    <div class="row">
        <div class="col-12">
            <div class="page-title-box page-title-box-alt">
                <h4 class="page-title">Product List</h4>
                <div class="page-title-right">
                    <ol class="breadcrumb m-0">
                        <li class="breadcrumb-item"><a href="javascript: void(0);">Minton</a></li>
                        <li class="breadcrumb-item"><a href="javascript: void(0);">eCommerce</a></li>
                        <li class="breadcrumb-item active">Product List</li>
                    </ol>
                </div>
            </div>
        </div>
    </div>

    <div class="card">
        <div class="card-body p-4">
            <form>
                <div class="row">
                    <h4 class="ml-2 mt-3 mt-lg-0">Create Product</h4>
                    <div class="col-lg-6">
                        <div class="p-sm-3">
                            <div class="mb-3">
                                <label for="productname" class="form-label">Product Name</label><span class="text-danger">*</span>
                                <input class="form-control" type="text" id="productname" placeholder="Enter your Product Name" required>
                            </div>
                            <div class="mb-3">
                                <label for="brand" class="form-label">Brand</label><span class="text-danger">*</span>
                                <input class="form-control" type="text" id="brand" placeholder="Enter your Brand" required>
                            </div>
                            <div class="mb-3">
                                <label for="model" class="form-label">Model</label><span class="text-danger">*</span>
                                <input class="form-control" type="text" id="model" placeholder="Enter your Model" required>
                            </div>
                            <div class="mb-3">
                                <label for="image" class="form-label">Image</label>
                                <input type="file" id="image">
                            </div>
                            <div class="mb-3">
                                <label for="category" class="form-label">Category</label><span class="text-danger">*</span>
                                <select id="category">
                                    <optgroup label="optgroup">
                                        <option>Mobile</option>
                                        <option>Laptop</option>
                                        <option>Headset</option>
                                    </optgroup>
                                </select>
                            </div>
                            <div class="mb-3">
                                <label for="price" class="form-label">Price</label><span class="text-danger">*</span>
                                <input class="form-control" type="text" id="price" placeholder="Enter your Price" required>
                            </div>
                            <div class="mb-3">
                                <label for="publishonsite" class="form-label">Publish On Site</label><span class="text-danger">*</span>
                                <input type="checkbox" id="publishonsite">
                            </div>
                        </div>
                    </div>
                </div>
                <div class="row mt-3">
                    <div class="col-12 text-center">
                        <button class="btn btn-primary" id="btnSmt" type="button">Save</button>
                        <a href="product-List-view" class="btn btn-danger">Cancel</a>
                    </div>
                </div>
            </form>
        </div>
    </div>

    <script>
        $(document).ready(function () {
            $('#btnSmt').click(function () {
                // Data to be sent in the POST request
                var postData = {
                    Name: $('#productname').val(),
                    Brand: $('#brand').val(),
                    Model: $('#model').val(),
                    ImageURL: $('#image').val(),
                    Category: $('#category').val(),
                    Price: $('#price').val(),
                    PublishOnSite: $('#publishonsite').is(':checked')
                };

                // Perform an AJAX POST request
                $.ajax({
                    type: "POST",
                    url: "https://localhost:7118/api/Product/AddUserDetailsAsync", // Replace with your server's API endpoint
                    data: JSON.stringify(postData), // Convert the data to JSON format
                    contentType: "application/json", // Set the content type to JSON
                    success: function (response) {
                        // Handle the successful response from the server
                        console.log("Server response:", response);
                    },
                    error: function (error) {
                        // Handle any errors that occur during the request
                        console.error("Error:", error);
                    }
                });
            });
        }); // Close $(document).ready()
    </script>
</body>
</html>
